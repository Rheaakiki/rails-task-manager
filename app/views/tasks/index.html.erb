<% @tasks.each do |task| %>
<%= link_to task.name, task_path(task) %>
<%= link_to " #{task.name} click here to edit", edit_task_path(task) %>
<%= link_to " #{task.name} delete", task_path(task),
  method: :delete,
  data: { confirm: "Are you sure you want to delete this taks?"} %>
  <%= link_to "Create new task", new_task_path %>
<% end %>

